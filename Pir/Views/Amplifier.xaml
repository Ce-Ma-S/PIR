<controls:ComponentControl
    x:Class="Pir.Views.Amplifier"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:telerik="using:Telerik.UI.Xaml.Controls.Input"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <VariableSizedWrapGrid
        Orientation="Horizontal"
        MaximumRowsOrColumns="3">
        <controls:PropertyControl
            Header="Forward Pin">
            <telerik:RadNumericBox
                Minimum="0"
                Value="{Binding ForwardPinNumber, Mode=TwoWay}"/>
        </controls:PropertyControl>
        <controls:PropertyControl
            Header="Backward Pin">
            <telerik:RadNumericBox
                Minimum="0"
                Value="{Binding BackwardPinNumber, Mode=TwoWay}"/>
        </controls:PropertyControl>
        <controls:PropertyControl
            Header="Reversed Polarity">
            <CheckBox
                IsChecked="{Binding ReversedPolarity, Mode=TwoWay}"/>
        </controls:PropertyControl>
    </VariableSizedWrapGrid>
</controls:ComponentControl>
